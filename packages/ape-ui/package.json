{
  "name": "@ape-spa/ape-ui",
  "author": "SafariLib",
  "description": "Web Components library for Safari applications.",
  "version": "0.1.1",
  "homepage": "https://github.com/SafariLib/ape-spa/tree/master/packages/ape-ui#readme",
  "type": "module",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "readme": "README.md",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",

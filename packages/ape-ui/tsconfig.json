{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "types": ["vite/client"],
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "plugins": [
            {
                "name": "ts-lit-plugin"
            }
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
